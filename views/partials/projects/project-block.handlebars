<li>
    <div class="all-projects-list">
        <span>
            {{#if completed}}
            <i class="far fa-check-circle"> </i>{{else}}
            <i class="far fa-circle incomplete-circle" data-id="{{this.dataValues.id}}"></i>{{/if}}
            <span class="project-title">{{this.dataValues.projectName}} - {{this.dataValues.projectDescription}}</span>
            <i data-id="{{this.dataValues.id}}" class="fas fa-trash-alt project-trash float-right"></i>
            <span class="project-description float-right">
                <i class="far fa-comment-alt" data-toggle="modal" data-target="#descriptionModal-{{this.dataValues.id}}"></i>
            </span>
            <span class="add-project-task float-right" data-id="{{this.dataValues.id}}">
                <i class="fas fa-plus small-plus" data-toggle="modal" data-target="#addtaskModal-{{this.dataValues.id}}"></i>
            </span>

        </span>
    </div>
    <!-- Description Modal -->
    <div class="modal fade" id="descriptionModal-{{this.dataValues.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="project-description-title"> {{#if this.dataValues.completed}}
                     <i class="far fa-check-circle"> </i> {{else}}
            <i class="far fa-circle"></i> {{/if}} {{this.dataValues.projectName}}</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="project-description" name="description">
                        <div class="form-row">
                            <p>{{this.dataValues.projectDescription}}</p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Add Task Modal  -->
    <div class="modal fade" id="addtaskModal-{{this.dataValues.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="add-task-title">Add Tasks - {{this.dataValues.projectName}}</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="add-project-task" class="needs-validation" name="addtask" method="POST" action="/api/tasks" novalidate>
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    <label for="taskname">Task Name</label>
                                    <input type="text" name="taskname" class="form-control" id="name-task" placeholder="Task Name" required>
                                    <div class="valid-feedback">
                                    ✓ Looks good!
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="category">Category</label>
                                    <select name="category" class="form-control" id="category-task" placeholder="Category">
                                        <option>Planning</option>
                                        <option>Marketing</option>
                                        <option>Development</option>
                                        <option>Testing</option>
                                        <option>Administration</option>
                                        <option>Customer Support</option>
                                    </select>
                                    <div class="valid-feedback">
                                    ✓ Looks good!
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                <label for="startdate">Start Date</label>
                                <input type="date" name="startdate" class="form-control" id="startdate-task" placeholder="Start Date" required>
                                <div class="valid-feedback">
                                ✓ Looks good!
                                </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                <label for="enddate">End Date</label>
                                <input type="date" name="enddate" class="form-control" id="enddate-task" placeholder="End Date" required>
                                <div class="valid-feedback">
                                ✓ Looks good!
                                </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    <label for="status">Status</label>
                                    <select name="status" class="form-control" id="status-task" placeholder="status" required>
                                        <option>In Progress</option>
                                        <option>Overdue</option>
                                    </select>
                                    <div class="valid-feedback">
                                    ✓ Looks good!
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="userID">User</label>
                                    <select name="userName" class="form-control" id="userID-task-{{this.dataValues.id}}" placeholder="userID" required>

                                    </select>
                                    <div class="valid-feedback">
                                    ✓ Looks good!
                                    </div>
                                </div>
                            
                            </div>
                            <input type="text" name="projectName" class="form-control" id="projectID-task" value="{{this.dataValues.projectName}}" hidden required>
                            <button class="btn btn-primary bg-primary" type="submit">Submit form</button>
                        </form>
                </div>
            </div>
        </div>
    </div>        
            
</li>