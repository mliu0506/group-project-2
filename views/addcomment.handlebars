<section class="projects float-right col-md-9">

    {{#unless True}}
    <div class="all-projects">
        <h4 class="project-headings">Current Comments
         <span class="add-comment float-right">
                <i class="fas fa-plus" data-toggle="modal" data-target="#addcommentModal"></i>
        </span>
        </h4>
        <ul>
            {{#each comments}} {{#unless completed}} {{> addcomment/addcomment-block completed=false}} {{/unless}} {{/each}}
        </ul>
    </div>
    {{/unless}}
    <br> {{#unless True}}
    <div class="all-projects-completed">
        <span>
            <h4 class="project-headings d-inline">Completed Comments</h4>
           
        </span>
        <ul>
            {{#each comments}} {{#if completed}} {{> addcomment/addcomment-block completed=true}} {{/if}} {{/each}}
        </ul>
    </div>
    {{/unless}}


 <!-- Add Comment Modal  -->
    <div class="modal fade" id="addcommentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="add-comment-title">Add Comment</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="add-comment" class="needs-validation" name="addcomment" method="POST" action="/api/comments" novalidate>
                            <div class="form-row">
                                <div class="col-md-12 mb-3">
                                    <label for="comment">Comment</label>
                                    <input type="text" name="comment" class="form-control" id="comment" placeholder="Input follow up actions......" required>
                                    <div class="valid-feedback">
                                    ✓ Looks good!
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-12 mb-3">
                                    <label for="taskName">For Task</label>
                                    <select name="taskName" class="form-control" id="taskName-comment" placeholder="Task Name" required>
                                    </select>
                                    <div class="valid-feedback">
                                    ✓ Looks good!
                                    </div>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-6 mb-3">
                                    <label for="fromuserName">From</label>
                                    <select name="fromuserName" class="form-control" id="from-comment" placeholder="User Name" required>
                                        <option value="{{user.userName}},{{user.image}}" selected>{{user.userName}}</option>
                                    </select>
                                    <div class="valid-feedback">
                                    ✓ Looks good!
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="touserName">To</label>
                                    <select name="touserName" class="form-control" id="to-comment" placeholder="User Name" required>
                                    </select>
                                    <div class="valid-feedback">
                                    ✓ Looks good!
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary bg-primary" type="submit">Submit form</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

       